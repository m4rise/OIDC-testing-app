### Application Environment
NODE_ENV=development
PORT=5000

### URLs and Hosts
# Backend URL (how the backend is accessed externally, e.g., through Traefik)
BACKEND_URL=https://node.localhost
# Frontend URL (where the frontend is hosted)
FRONTEND_URL=https://front.localhost
# Internal backend URL (for container-to-container communication)
INTERNAL_BACKEND_URL=http://localhost:5000
# Internal frontend URL (for container-to-container communication)
INTERNAL_FRONTEND_URL=http://localhost:4200

### Database - Postgres
PG_HOST=postgres
PG_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password
POSTGRES_DB=your-database-name

### Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production-with-random-string
SESSION_ROLLING_MINUTES=60 # Rolling session expiration in minutes
SESSION_MAXAGE_MINUTES=600 # Session expiration in minutes (even if rolling session is enabled)

# Cookie Security (Production settings)
# SESSION_COOKIE_NAME=app_session_prod
# COOKIE_DOMAIN=.yourdomain.com

### OIDC Authentication
# Client credentials for OIDC provider
OIDC_CLIENT_ID=your-oidc-client-id
OIDC_CLIENT_SECRET=your-oidc-client-secret

# OIDC Provider (for production, set to your real OIDC provider)
# OIDC_ISSUER=https://your-sso-provider.com

# OIDC Callback URL (where OIDC provider redirects after authentication)
OIDC_CALLBACK_URL=https://node.localhost/api/auth/callback

# OIDC ACR Values - Authentication Context Class Reference
# Leave undefined to use provider defaults
# OIDC_ACR_VALUES=mfa,level2

### Development Authentication Bypass
# Enable development interceptor (bypasses real OIDC provider)
DEV_BYPASS_AUTH=true

# Dev user configuration
DEV_USER_ID=dev-user-123
DEV_USER_EMAIL=dev.user@example.com
DEV_USER_NAME=Dev User

# Dev JWT settings
DEV_JWT_EXPIRY_MINUTES=60

# Include enhanced callback parameters for testing
DEV_INCLUDE_ENHANCED_CALLBACK_PARAMS=true

### Frontend Redirect URLs
# Where to redirect after successful/failed login
LOGIN_SUCCESS_REDIRECT_PATH=/auth/success
LOGIN_FAILURE_REDIRECT_PATH=/auth/failure
